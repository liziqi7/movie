extends ../layout
block content
	.container
		.row
			each cat in catetories
				.panel.panel-primary
					.panel-heading
						h3 #{cat.name}
					.panel-body
						if cat.movies&&cat.movies.length >0
							each item in movies
								.col-md-2
									.thumbnail
										a(href="/movie/#{item._id}")
											img(src="#{item.poster}",alt="#{item.title}")
										.caption
											h3 #{item.title}
											p: a.btn.btn-primary(href="/movie/#{item._id}",role="botton") 观看预告片